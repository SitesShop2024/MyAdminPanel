<!DOCTYPE html>
<html>
<head>
    <title>Список админов</title>
</head>
<body>
    <h1>Список админов</h1>
    <ul>
        <% users.forEach(user => { %>
            <li>
                <%= user.username %> 
                <% if (user.id != userId) { %>
                    <!-- Форма для удаления админа -->
                    <form action="/delete-user/<%= user.id %>" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('Вы уверены, что хотите удалить этого админа?');">
                            Удалить
                        </button>
                    </form>
                <% } else { %>
                    (Вы)
                <% } %>
            </li>
        <% }) %>
    </ul>
    <a href="/register">Добавить нового админа</a>

    <nav>
        <a href="/">Главная</a> | 
        <a href="/users">Пользователи</a> | 
        <a href="/edit">Редактирование контента</a> | 
        <a href="/logout">Выход</a>
    </nav>
</body>
</html>
